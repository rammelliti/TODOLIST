<!DOCTYPE html>
<html lang ="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, inital-scale=1">

        <title>{% block title %}{% endblock %} - Todolist</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker-standalone.css">
         {% endblock stylesheets %}
    </head>
    <body>
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-12 text-center">
                    <h1>LISTE DES TACHES</h1>
                </div>
            </div>

            <div style="width:100%;">
                {% for message in app.flashes('warning') %}
                <div class="alert alert-danger">
                    <i class="fas fa-skull-crossbones"></i>
                    {{ message }}
                </div>
                {% endfor %}
                
                {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    <i class="fas fa-thumbs-up"></i>
                    {{ message }}
                </div>
                {% endfor %}
                {% for message in app.flashes('double') %}
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('success-recycle') %}
                <div class="alert alert-success">
                    <i class="fas fa-recycle"></i>
                    {{ message }}
                </div>
                {% endfor %}
            </div>
              <div class="row mt-5">
                {% block body %}{% endblock %}        
              </div>
            </div>
          
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
           
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
            <script defer src="https://use.fontawesome.com/releases/v5.12.1/js/all.js"></script>
            
            <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.21.0/moment-with-locales.min.js" crossorigin="anonymous"></script>
        {% endblock %}    
</body>
</html>
